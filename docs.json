{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "EdgeBook",
  "colors": {
    "primary": "#a7d400",
    "light": "#c4f000",
    "dark": "#8ab300"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started/quickstart",
              "getting-started/first-trade"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/trade-journal",
              "features/chart-gallery",
              "features/image-annotations",
              "features/pattern-library",
              "features/strategies",
              "features/trade-sharing"
            ]
          },
          {
            "group": "Views & Organization",
            "pages": [
              "views/kanban-board",
              "views/table-view",
              "views/advanced-filtering",
              "views/saved-views"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "customization/workflow-statuses",
              "customization/execution-types",
              "customization/tags",
              "customization/traders",
              "customization/display-settings"
            ]
          },
          {
            "group": "Chrome Extension",
            "pages": [
              "chrome-extension/overview",
              "chrome-extension/installation"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "App",
          "href": "https://edgebook.io",
          "icon": "arrow-up-right-from-square"
        },
        {
          "anchor": "Changelog",
          "href": "https://github.com/highlydubious/chartfolio-tradingview-journal/blob/main/CHANGELOG.md",
          "icon": "list"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@edgebook.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Open App",
      "href": "https://edgebook.io"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/edgebook_io",
      "github": "https://github.com/highlydubious/chartfolio-tradingview-journal"
    }
  }
}
